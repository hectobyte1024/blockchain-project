        // Initialize variables
        let currentUser = null;
        let ws = null;

        // Initialize dashboard
        document.addEventListener('DOMContentLoaded', async () =&gt; {
            console.log('üöÄ Dashboard loading...');
            try {
                await loadCurrentUser();
                console.log('‚úÖ Current user loaded');
                
                await connectWebSocket();
                console.log('‚úÖ WebSocket connected');
                
                await loadTransactions();
                console.log('‚úÖ Transactions loaded');
            } catch (error) {
                console.error('‚ùå Dashboard initialization error:', error);
            }
        });

        // Load current user info
        async function loadCurrentUser() {
            try {
                console.log('üîç Loading current user...');
                const response = await fetch('/api/user/info', {
                    credentials: 'include' // Include session cookies
                });
                
                console.log('üì° User info response:', response.status);
                const result = await response.json();
                console.log('üìÑ User info result:', result);
                
                if (result.success) {
                    currentUser = result.data;
                    updateUserInfo();
                    console.log('‚úÖ User loaded successfully:', currentUser.username);
                } else {
                    console.error('‚ùå Failed to load user data:', result);
                    // Don't logout immediately, let's see what happens
                    // logout();
                }
            } catch (error) {
                console.error('‚ùå Exception loading user:', error);
                // Don't logout immediately, let's see what happens
                // logout();
            }
        }

        // Update user information in UI
        function updateUserInfo() {
            if (currentUser &amp;&amp; currentUser.wallet) {
                document.getElementById('wallet-balance').textContent = 
                    currentUser.wallet.balance.toFixed(2);
            }
        }

        // Connect to WebSocket for real-time updates
        async function connectWebSocket() {
            try {
                const wsProtocol = window.location.protocol === 'https:' ? 'wss:' : 'ws:';
                const wsUrl = wsProtocol + '//' + window.location.host + '/ws';
                
                ws = new WebSocket(wsUrl);
                
                ws.onmessage = (event) =&gt; {
                    const data = JSON.parse(event.data);
                    handleWebSocketMessage(data);
                };
                
                ws.onopen = () =&gt; {
                    console.log('‚úÖ Connected to blockchain WebSocket');
                };
                
            } catch (error) {
                console.error('WebSocket connection failed:', error);
            }
        }

        // Handle WebSocket messages
        function handleWebSocketMessage(data) {
            if (data.type === 'network_update' || data.type === 'network_status') {
                updateNetworkStats(data.data);
            }
        }

        // Update network statistics
        function updateNetworkStats(stats) {
            document.getElementById('connected-peers').textContent = stats.connected_peers || '0';
            document.getElementById('block-height').textContent = stats.block_height || '0';
            document.getElementById('mempool-size').textContent = stats.mempool_size || '0';
            document.getElementById('hash-rate').textContent = (stats.hash_rate || 0).toFixed(2) + ' H/s';
            
            const miningStatus = document.getElementById('mining-status');
            if (stats.is_mining) {
                miningStatus.textContent = '‚õèÔ∏è Mining';
                miningStatus.style.color = '#28a745';
            } else {
                miningStatus.textContent = 'üí§ Idle';
                miningStatus.style.color = '#6c757d';
            }

            document.getElementById('network-info').textContent = 
                'Block #' + (stats.block_height || 0) + ' | ' + (stats.connected_peers || 0) + ' peers';
        }

        // Refresh wallet balance
        async function refreshBalance() {
            if (!currentUser) return;
            
            try {
                const response = await fetch('/api/v1/wallets/' + currentUser.wallet_address + '/balance', {
                    credentials: 'include'
                });
                
                const result = await response.json();
                if (result.success) {
                    document.getElementById('wallet-balance').textContent = 
                        result.data.balance.toFixed(2);
                }
            } catch (error) {
                console.error('Failed to refresh balance:', error);
            }
        }

        // Send transaction modal
        function showSendModal() {
            document.getElementById('send-modal').style.display = 'block';
        }

        function closeSendModal() {
            document.getElementById('send-modal').style.display = 'none';
            document.getElementById('send-form').reset();
        }

        // Handle send transaction
        document.getElementById('send-form').addEventListener('submit', async (e) =&gt; {
            e.preventDefault();
            
            const formData = new FormData(e.target);
            const txData = {
                from_address: currentUser.wallet_address,
                to_address: formData.get('send-to') || document.getElementById('send-to').value,
                amount: parseFloat(formData.get('send-amount') || document.getElementById('send-amount').value),
                transaction_type: 'transfer',
                metadata: {
                    message: formData.get('send-message') || document.getElementById('send-message').value
                }
            };

            try {
                const response = await fetch('/api/v1/transactions/send', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    credentials: 'include',
                    body: JSON.stringify(txData)
                });

                const result = await response.json();
                
                if (result.success) {
                    alert('‚úÖ Transaction sent successfully!');
                    closeSendModal();
                    refreshBalance();
                    loadTransactions();
                } else {
                    alert('‚ùå Transaction failed: ' + result.message);
                }
            } catch (error) {
                alert('‚ùå Network error: ' + error.message);
            }
        });

        // Mining controls
        async function startMining() {
            if (!currentUser) return;
            
            try {
                const response = await fetch('/api/v1/mining/start', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    credentials: 'include',
                    body: JSON.stringify({ miner_address: currentUser.wallet_address })
                });

                const result = await response.json();
                if (result.success) {
                    alert('‚úÖ Mining started!');
                } else {
                    alert('‚ùå Failed to start mining');
                }
            } catch (error) {
                alert('‚ùå Error: ' + error.message);
            }
        }

        async function stopMining() {
            try {
                const response = await fetch('/api/v1/mining/stop', {
                    method: 'POST',
                    credentials: 'include'
                });

                const result = await response.json();
                if (result.success) {
                    alert('‚úÖ Mining stopped!');
                } else {
                    alert('‚ùå Failed to stop mining');
                }
            } catch (error) {
                alert('‚ùå Error: ' + error.message);
            }
        }

        // Load transaction history
        async function loadTransactions() {
            if (!currentUser) return;
            
            try {
                const response = await fetch('/api/v1/transactions/history/' + currentUser.wallet_address, {
                    credentials: 'include'
                });

                const result = await response.json();
                
                const listDiv = document.getElementById('transaction-list-content');
                
                if (result.success &amp;&amp; result.data.length &gt; 0) {
                    listDiv.innerHTML = '';
                    result.data.slice(0, 5).forEach(tx =&gt; {
                        addTransactionToList(tx);
                    });
                } else {
                    listDiv.innerHTML = '&lt;div class="transaction-item"&gt;&lt;div class="tx-info"&gt;&lt;div style="color: #666; font-size: 14px;"&gt;No transactions yet&lt;/div&gt;&lt;/div&gt;&lt;/div&gt;';
                }
            } catch (error) {
                console.error('Failed to load transactions:', error);
            }
        }

        // Add transaction to list
        function addTransactionToList(tx) {
            const listDiv = document.getElementById('transaction-list-content');
            const txItem = document.createElement('div');
            txItem.className = 'transaction-item';
            
            const statusClass = tx.status === 'confirmed' ? 'tx-confirmed' : 'tx-pending';
            const icon = tx.type === 'sent' ? 'üì§' : 'üì•';
            const amountColor = tx.type === 'sent' ? '#dc3545' : '#28a745';
            
            txItem.innerHTML = 
                '&lt;div class="tx-info"&gt;' +
                    '&lt;div class="tx-amount" style="color: ' + amountColor + ';"&gt;' +
                        icon + ' ' + Math.abs(tx.amount).toFixed(2) + ' EDU' +
                    '&lt;/div&gt;' +
                    '&lt;div class="tx-address"&gt;' +
                        (tx.type === 'sent' ? 'To: ' + tx.to : 'From: ' + tx.from) +
                    '&lt;/div&gt;' +
                '&lt;/div&gt;' +
                '&lt;div&gt;' +
                    '&lt;span class="tx-status ' + statusClass + '"&gt;' + tx.status + '&lt;/span&gt;' +
                    '&lt;div style="font-size: 12px; color: #999; margin-top: 5px;"&gt;' +
                        new Date(tx.timestamp).toLocaleString() +
                    '&lt;/div&gt;' +
                '&lt;/div&gt;';
            
            listDiv.appendChild(txItem);
        }

        // Logout function
        async function logout() {
            try {
                await fetch('/api/auth/logout', {
                    method: 'POST',
                    credentials: 'include' // Include session cookies
                });
            } catch (error) {
                console.error('Logout error:', error);
            }
            
            window.location.href = '/login';
        }

        // Get username initial for avatar
        const username = '{username}';
        const usernameInitial = username.charAt(0).toUpperCase();
        
        // Replace template placeholders
        document.addEventListener('DOMContentLoaded', () =&gt; {
            // This would normally be done server-side
            const elements = document.querySelectorAll('*');
            elements.forEach(el =&gt; {
                if (el.textContent &amp;&amp; el.textContent.includes('{')) {
                    el.textContent = el.textContent.replace('{username_initial}', usernameInitial);
                }
            });
        });
    

</html>


